# structure of the SF states
https://docs.aws.amazon.com/step-functions/latest/dg/concepts-amazon-states-language.html

# task
"Lambda Invoke": {
  "Type": "Task",
  "Resource": "arn:aws:states:::lambda:invoke",
  "End": true
}

# wait
"wait_ten_seconds": {
  "Type": "Wait",
  "Seconds": 1,
  "Next": "NextState"
}

# choice
"choice": {
  "Type": "Choice",
  "Choices" : [
        {
          "Variable": "$.foo",
          "NumericEquals": 1,
          "Next": "FirstMatchState"
        },
        "Default": "DefaultState"
  ]
}
